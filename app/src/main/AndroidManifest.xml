<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.attendance_management_system">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AdminPage"
            android:label="@string/title_activity_admin_homepage"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.StudentPage"
            android:label="@string/title_activity_student_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ViewStudentAttendance"
            android:label="@string/title_activity_view__studentattendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.FacultyPage"
            android:label="@string/title_activity_faculty_homepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewClass"
            android:label="@string/title_activity_view_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".logins.LoginAdmin"
            android:label="@string/title_activity_login__admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".logins.LoginFaculty"
            android:label="@string/title_activity_login__faculty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".logins.LoginStudent"
            android:label="@string/title_activity_login__student"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".select_Login" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity android:name=".Rolls"></activity>
        <activity android:name=".activities.GenerateReport"></activity>
        <activity android:name=".register.RegisterFaculty"></activity>
        <activity android:name=".register.RegisterStudent"></activity>
        <activity android:name=".RemoveStudent"></activity>
        <activity android:name=".RemoveFaculty"></activity>
        <activity android:name=".fragments.StudentDashboard"
            tools:ignore="Instantiatable" />
        <activity android:name=".fragments.StudentProfile"
            tools:ignore="Instantiatable" />

    </application>

</manifest>