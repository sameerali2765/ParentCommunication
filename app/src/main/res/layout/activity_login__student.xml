<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".logins.LoginStudent"
    tools:showIn="@layout/activity_login__student"
    android:background="@drawable/loginpagebackground">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student login"
        android:textAllCaps="true"
        android:id="@+id/student_header"
        android:textColor="@color/black"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_header"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="132dp"
        android:id="@+id/reghead"
        android:text="Registration number"/>


    <EditText
        android:id="@+id/registration_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reghead"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:hint="Enter your registration number"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_no"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="132dp"
        android:id="@+id/pwdhead"
        android:text="Password"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@id/pwdhead"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="130dp"
        android:hint="Enter your password "
        android:id="@+id/password"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="170dp"
        android:textColor="@color/black"
        android:text="Login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:id="@+id/guest"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="153dp"
        android:layout_marginRight="153dp"
        android:text="Guest"
        android:textColor="@color/black" />
</RelativeLayout>