<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RemoveStudent"
    tools:showIn="@layout/activity_remove_student"
    android:background="@drawable/background1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Student"
        android:textAllCaps="true"
        android:id="@+id/student_header"
        android:textColor="@color/surface_varient"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/reghead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/surface_varient"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:text="Registration number"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:textSize="20sp"
        android:textColor="@color/surface_varient"
        android:hint="Enter Student ID"
        android:id="@+id/registration_no"
        android:inputType="number">
    </EditText>
    <Button
        android:id="@+id/rem_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        android:textColor="@color/black"
        android:text="Remove" />

</LinearLayout>